server {
  listen 80;
  listen [::]:80;
  server_name _DOCKER_PROD_DOMAIN_;

  root /app/ZeppelinBot/dashboard/dist;

  location ^~ /api {
    rewrite ^/api(/.*)$ $1 break;

    proxy_http_version 1.1;

    resolver 8.8.8.8;
    proxy_pass http://_API_PROXY_URL_/;
    proxy_redirect off;

    client_max_body_size 200M;
  }

  location / {
    index index.html;
    try_files $uri $uri/ /index.html;
  }
}
